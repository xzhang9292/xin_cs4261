<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shuangke.toolbar.PostProject"
    tools:showIn="@layout/activity_post_project">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Title:"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/health_checkBox"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Categories:"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@+id/editText5"
        android:layout_alignEnd="@+id/MusicCk1" />

    <EditText
        android:id="@+id/project_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignStart="@+id/textView15" />

    <EditText
        android:id="@+id/project_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/project_title"
        android:layout_alignStart="@+id/project_title" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Description:"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@+id/project_title"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posting Period:"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@+id/team_size"
        android:layout_alignEnd="@+id/textView14" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Size:"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@+id/project_description"
        android:layout_alignStart="@+id/textView7" />

    <EditText
        android:id="@+id/team_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/project_description"
        android:layout_alignStart="@+id/project_description" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="from"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="x/xx/xxxx"
        android:inputType="date"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignStart="@+id/textView7"
        android:layout_toStartOf="@+id/editText6" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to"
        android:layout_alignTop="@+id/editText5"
        android:layout_alignEnd="@+id/team_size" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="x/xx/xxxx"
        android:inputType="date"
        android:layout_alignBaseline="@+id/editText5"
        android:layout_alignBottom="@+id/editText5"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/csCK1" />

    <CheckBox
        android:id="@+id/health_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/textView9"
        android:text="Health" />

    <CheckBox
        android:id="@+id/csCK1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/health_checkBox"
        android:layout_alignBottom="@+id/health_checkBox"
        android:layout_toEndOf="@+id/textView14"
        android:text="CS" />

    <CheckBox
        android:id="@+id/businessCK1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/csCK1"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/textView10"
        android:text="Business" />

    <CheckBox
        android:id="@+id/MusicCk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/health_checkBox"
        android:layout_below="@+id/health_checkBox"
        android:layout_marginTop="8dp"
        android:text="Music" />

    <CheckBox
        android:id="@+id/sportsCK1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sports"
        android:layout_above="@+id/textView14"
        android:layout_alignStart="@+id/csCK1" />

    <CheckBox
        android:id="@+id/ArtsCK1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sportsCK1"
        android:layout_alignStart="@+id/businessCK1"
        android:text="Arts" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Project Reward:"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/MusicCk1"
        android:layout_alignStart="@+id/textView19" />

    <EditText
        android:id="@+id/project_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/textView15" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact information:"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/project_reward"
        android:layout_alignStart="@+id/home" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/health_checkBox"
        android:layout_below="@+id/textView15"
        android:layout_marginTop="8dp"
        android:text="Email:" />

    <EditText
        android:id="@+id/email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/email"
        android:layout_alignBottom="@+id/email"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/email"
        android:ems="10"
        android:hint="xxx@xxx.com"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/project_reward"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/project_reward"
        android:text="$" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email_address"
        android:text="Phone" />

    <EditText
        android:id="@+id/contact_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email_address"
        android:layout_below="@+id/email"
        android:ems="10"
        android:hint="(xxx)-xxx-xxxx"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_phoneNumber"
        android:layout_toStartOf="@+id/contact_phoneNumber"
        android:text="Address" />

    <EditText
        android:id="@+id/contact_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:layout_alignBaseline="@+id/textView19"
        android:layout_alignBottom="@+id/textView19"
        android:layout_toEndOf="@+id/textView18" />

    <Button
        android:id="@+id/post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:layout_alignTop="@+id/contact_adress"
        android:layout_toEndOf="@+id/contact_phoneNumber"
        android:onClick="gotoUserProjectInfor"/>

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="HOME"
        android:layout_below="@+id/post"
        android:layout_alignEnd="@+id/textView8"
        android:onClick="gotoHomePage"/>

    <Button
        android:id="@+id/myAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Account"
        android:layout_alignTop="@+id/home"
        android:layout_alignEnd="@+id/project_reward" />

    <Button
        android:id="@+id/projects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Projects"
        android:layout_alignBaseline="@+id/myAccount"
        android:layout_alignBottom="@+id/myAccount"
        android:layout_toEndOf="@+id/textView17" />

</RelativeLayout>
